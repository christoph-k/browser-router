{
  "name": "browser-router",
  "version": "1.0.0",
  "description": "A simple frontend router for custom-elements",
  "main": "browser-router.js",
  "scripts": {
    "test": "nyc mocha test/*.js --require babel-register --reporter spec || exit 0",
    "doc": "jsdoc -d doc src/**",
    "build": "parcel build -d dist -o browser-router.js src/index.js",
    "lint": "standard src/** test/**",
    "fix": "standard --fix src/** test/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christoph-k/browser-router.git"
  },
  "keywords": [
    "browser",
    "router",
    "custom-elements",
    "web-components"
  ],
  "author": "christoph-k",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christoph-k/browser-router/issues"
  },
  "homepage": "https://github.com/christoph-k/browser-router#readme",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "jsdoc": "^3.6.3",
    "jsdom": "^15.2.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "parcel": "^1.12.4",
    "standard": "^14.3.1"
  }
}
